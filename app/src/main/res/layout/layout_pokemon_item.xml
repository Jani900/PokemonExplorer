<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/pokemonCardView"
    android:layout_margin="20dp"
    android:backgroundTint="@color/background_tint"
    android:elevation="10dp"
    app:layout_constraintTop_toTopOf="@+id/nameOutput"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardCornerRadius="30dp">

        <!-- Use a horizontal LinearLayout as the container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

                <ImageView
                    android:id="@+id/pokemonCardImage"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bulbasur" />

                <TextView
                    android:id="@+id/pokemonCardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/bulbasar"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />
        </LinearLayout>


</androidx.cardview.widget.CardView>